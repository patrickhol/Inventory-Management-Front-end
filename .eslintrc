{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react",
        "plugin:jest/recommended"
    ],
    "parser": "babel-eslint",
    "globals": {
        "document": true,
        "fetch": false,
        "alert": false,
        "localStorage": true
    },
    "env": {
        "jest": true,
        "mocha": true
    },
    "plugins": [
        "prettier",
        "jest",
        "chai-expect"
    ],
    "rules": {
        "no-alert": 0,
        "jest/valid-expect": 0,
        "import/no-named-as-default": 0,
        "import/no-named-as-default-member": 0,
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "singleQuote": true
            }
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js"
                ]
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "should|expect"
            }
        ]
    }
}